
  <%= form_for @pin, html: {multipart: true} do |f| %>
    <% if @pin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pin.errors.count, "error") %> непозволили сохранить данный Пин</h2>

        <ul>
        <% @pin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <!-- <div class="form-group">
      <%= f.label :image, "Изображение" %><br>
      <%= f.file_field :image, :multiple => "multiple", class: "form-control" %>
    </div> !-->

    <div class="form-group">
      <%= f.label :description, "Название" %><br>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Цена" %><br>
      <%= f.text_field :price, class: "form-control" %>
    </div>

     <div class="form-group">
      <%= f.label :bedroom_number, "Количество комнат" %><br>
      <%= f.text_field :bedroom_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Адрес" %><br>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Создать Пин", class: "btn btn-primary" %>
    </div>
    
  <% end %>

  <%= fields_for @pin.pic.build, html: { multipart: true } do |u| %>
      <%= u.label :image, t('.Загрузите фотографии квартиры') %>
      <%= u.file_field :image, multiple: true%>
    <% end %>

