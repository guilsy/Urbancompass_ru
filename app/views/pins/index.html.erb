<h1>Список Пиннов</h1>
<table>
  <thead>
    <tr>
      <th>Описание</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to "Показать", pin, class: "btn btn-primary" %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Редактировать', edit_pin_path(pin), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Удалить', pin, class: "btn btn-secondary", method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Новый Пин', new_pin_path %>
<% end %>