<script>
	$(window).ready(function() {	
		$("a.gallery").fancybox({
			'padding' : '0',
			'cyclic'  : true,
			'hideOnContentClick' : true,
			'transitionIn' : 'none',
			'transitionOut' : 'none'
		});
	});
</script>

<% @pin.pics.each do |x| %>
	<% if x.image == nil %>
	<% else %>
		<%= link_to image_tag(x.image.url(:medium)), x.image.url(:large), :class => "gallery", :rel => "group#{x.pin_id}" %>
	<%end %>

<% end %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Описание:</strong>
  <%= @pin.description %>
</p>
<% if @pin.user == current_user %>
	<%= link_to 'Редактировать', edit_pin_path(@pin) %> |
<% end %>	
<%= link_to 'Назад', pins_path %>